{
  "name": "boppy/solr-bundle",
  "type": "symfony-bundle",
  "description": "Forked from floriansemm/solr-bundle - Symfony >= 4.3 Solr integration bundle",
  "keywords": [
    "search",
    "index",
    "symfony",
    "solr"
  ],
  "homepage": "https://github.com/boppy/SolrBundle",
  "license": "MIT",
  "require": {
    "php": "^7.1.3",
    "solarium/solarium": "^5.1",
    "symfony/dependency-injection": "^4.0|^5.0",
    "symfony/http-kernel": "^4.0|^5.0",
    "symfony/config": "^4.0|^5.0",
    "symfony/doctrine-bridge": "^4.0|^5.0",
    "minimalcode/search": "^1.0",
    "ramsey/uuid": "^3.5",
    "myclabs/deep-copy": "^1.6",
    "doctrine/annotations": "^1.4"
  },
  "require-dev": {
    "doctrine/orm": "^2.3",
    "phpunit/phpunit": "^7.0"
  },
  "minimum-stability": "stable",
  "autoload": {
    "psr-0": {
      "FS\\SolrBundle": ""
    }
  },
  "config": {
    "bin-dir": "bin"
  },
  "suggest": {
    "doctrine/orm": "Required if you want to use the Doctrine ORM"
  },
  "target-dir": "FS/SolrBundle"
}
